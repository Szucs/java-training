package com.neopragma.manning;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.io.Writer;
import java.util.List;

import javax.xml.parsers.ParserConfigurationException;

import org.apache.commons.io.FilenameUtils;
import org.xml.sax.InputSource;
import org.xml.sax.SAXException;

/**
 * Command-line driver for the XmlToHtml utility.
 * 
 * @author neopragma
 * @version 1.0.0
 */
public class Driver {
	
	private RuntimeOptions runtimeOptions = null;
	private Writer writer = null;

		public void run(String[] args) 
			throws FileNotFoundException, SAXException, IOException, ParserConfigurationException {

		try {
			runtimeOptions = new RuntimeOptions(args);
		} catch (InvalidRuntimeOptionException e) {
			err(e.getMessage());
			return;
		}
	}
	
	/**
	 * Copy the input to the specified file.
	 * 
	 * @param filename
	 * @throws IOException
	 */
	void writeHtmlFile(String inputFilename) throws IOException {
		if (writer() == null) {
			writer = new FileWriter(makeOutputFilenameBasedOn(inputFilename, outputDirectory()));
		}
		writer.write("");
		writer.close();
		writer = null;
	}
	
	void setWriter(Writer writer) {
		this.writer = writer;
	}
	
	Writer writer() {
		if (writer == null) {
			writer = new FileWriter((File) runtimeOptions.get(OptionName.OUTPUT_FILE).getValue());
		}
		return writer;
	}

	//TODO add proper logging
	void info(String message) {
		warn(message);
	}
	
	void warn(String message) {
		System.out.println(message);
	}
	
	void err(String message) {
		System.err.println(message);
	}
	
}
